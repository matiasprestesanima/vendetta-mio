<?php if (isset($this->next)): ?>
  <a href="<?php echo $this->url(array('page' => $this->next) + $this->urlParams); ?>" class="paginationNext ajax">
    <?php echo $this->t("Siguiente");?> &gt;
  </a> |
<?php else: ?>
  <span class="disabled"><?php echo $this->t("Siguiente");?> &gt;</span> |
<?php endif; ?>
 
