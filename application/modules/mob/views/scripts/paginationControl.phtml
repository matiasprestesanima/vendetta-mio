<?php if (isset($this->next)): ?>
  <a href="<?php echo $this->url(array('page' => $this->last) + $this->urlParams); ?>" class="paginationLast ajax">
    <?php echo $this->t("Ultima");?>
  </a>
<?php else: ?>
  <span class="disabled"><?php echo $this->t("Ultima");?></span>
